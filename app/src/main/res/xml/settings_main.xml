<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:defaultValue="@string/settings_order_by_default"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />

    <ListPreference
        android:defaultValue="@string/settings_show_status_default"
        android:entries="@array/settings_show_status_labels"
        android:entryValues="@array/settings_show_status_values"
        android:key="@string/settings_show_status_key"
        android:title="@string/settings_show_status_label" />

    <SwitchPreference
        android:defaultValue="@bool/settings_auth_user_default"
        android:entries="@array/settings_auth_user_labels"
        android:entryValues="@array/settings_auth_user_values"
        android:key="@string/settings_auth_user_key"
        android:title="@string/settings_auth_user_label" />

</PreferenceScreen>